# ============================================
# PostgreSQL Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stock_predictor
DB_USER=postgres
DB_PASSWORD=your_actual_password_here

# Optional: If you created a dedicated app user
# DB_USER=stock_app_user
# DB_PASSWORD=your_secure_app_password

# ============================================
# Flask Application Configuration
# ============================================
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True

# Secret key for session management (generate a random string for production)
SECRET_KEY=dev-secret-key-change-in-production

# ============================================
# Server Configuration
# ============================================
HOST=127.0.0.1
PORT=5000

# ============================================
# Security Settings
# ============================================
# Bcrypt rounds (10-12 recommended, higher = more secure but slower)
BCRYPT_ROUNDS=10

# CORS settings (for production, specify exact origins)
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# ============================================
# Application Settings
# ============================================
# Max login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Session timeout in minutes
SESSION_TIMEOUT=60

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=DEBUG
LOG_FILE=app.log

# ============================================
# IMPORTANT NOTES:
# ============================================
# 1. NEVER commit this file to Git! Add .env to .gitignore
# 2. Replace DB_PASSWORD with your actual PostgreSQL password
# 3. For production, generate a strong SECRET_KEY:
#    python -c "import secrets; print(secrets.token_hex(32))"
# 4. Change FLASK_ENV to 'production' when deploying
# ============================================